<h1>
    Listing Goals
</h1>



    <% if current_user %>
    <h3 class="note">Hello <%= current_user.name %>, never stop reaching your goals!</h1>
    <div class="button">
        <%= link_to 'New Goal', new_account_path%>
    </div>
<table>
  <tr>
    <th>User</th>
    <th>Goal</th>
    <th>Time</th>
    <th>Motivation</th>
    <th>Age</th>
    <th>Gender</th>
    <th>Phone</th>
    
    
  </tr>
 
  <% @accounts.each do |a| %>
    <tr>
    <td><% if a.user %>
        <%= a.user.name %>
        <% end %>
    </td>
      <td><%= a.fName %></td>
      <td><%= a.lName %></td>
      <td><%= a.email %></td>
      <td><%= a.age %></td>
      <td><%= a.userName %></td>
      <td><%= a.password %></td>
      
      
          <td class="button button_with_no_border"><%= link_to 'Show', account_path(a) %></td>
      
          <td class="button button_with_no_border"><%= link_to 'Edit', edit_account_path(a) %></td>
          
          <td class="button button_with_no_border"><%= link_to 'Destroy',
                account_path(a),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
    
    </tr>
  <% end %>
</table>
                            <% else %>
                                <h3 class="note">Hello, Please login before checking your goals</h1>
                                <div class="button center"><%= link_to "Log In", login_path %></div>
                            <% end %> 


