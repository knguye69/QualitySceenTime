<!--Social media icons-->
    <link rel='stylesheet prefetch' href='https://netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<!--Wallpaper and navigation bar-->
        <div class = "wallpaper">
            
            <nav class="nav">
                <!--Logo image-->
                    <a id="active" href="#">
                        <img id="logo" alt="logo">
                    </a>
                
                
                
        
                 <% if current_user %>
                 <%= link_to 'About', pages_path %>
                 <%= link_to 'User',new_account_path%>
                <%= link_to 'User Info', accounts_path %> 
                <div id="lesson_nav"><%= link_to 'Lesson', welcome_index_path %></div>  
                <%= link_to 'Log out', logout_path%>
                 <% else %>
                 <%= link_to 'About', pages_path %>
                 <%= link_to 'User',new_account_path%>
                <%= link_to 'User Info', accounts_path %> 
                <div id="lesson_nav"><%= link_to 'Lesson', welcome_index_path %></div>  
                <%= link_to 'Login', login_path%>
                <% end %>       
        

            </nav>
            
        </div><!--End wallpaper and navigation bar-->
        
        
        
        
        <p id="alert"><%= alert %></p>
                        
                        <div class="login-form">
                            <h1>Login</h1>
                            <%= form_tag sessions_path do |form| %>
                                <div class="field">
                                    <%= label_tag :email %>
                                    <%= text_field_tag :email %>
                                </div>
                                
                                <div class="field">
                                    <%= label_tag :password %>
                                    <%= password_field_tag :password %>
                                </div>
                                <div class="actions">
                                    <%= submit_tag "Login" %>
                                </div>
                            <% end %>
                        </div>
                        <p class="button">
                            <% if current_user %>
                                <h1>Welcome back, <%= current_user.name %>.</h1>
                                <div class="button"><%= link_to "Log Out", logout_path %></div>
                            <% else %>
                                <%= link_to "Sign Up", signup_path %>
                            <% end %>
                        </p>
                        
        
        <!--Footer-->
                <footer class="main-footer">
                    <div class="footer-col" >
                        <!--Social media icon-->
                        <div class="social-icon">
                            <a href="https://twitter.com" class="icon-button twitter"><i class="icon-twitter"></i><span></span></a>
                            <a href="https://facebook.com" class="icon-button facebook"><i class="icon-facebook"></i><span></span></a>
                            <a href="https://plus.google.com" class="icon-button google-plus"><i class="icon-google-plus"></i><span></span></a>
                        </div>

                        <!--Our mission part-->
                        <div class="our-mission" >
                            <h2>Our mission</h2>
                            
                        </div>

                        <!--Contact button and google map-->
                        <div class="text-button">
                            <!--Map-->
                            <div class="mapouter">
                                <div class="gmap_canvas">
                                    <iframe id="gmap_canvas" src="https://maps.google.com/maps?q=unc%20charlotte&t=&z=13&ie=UTF8&iwloc=&output=embed" >
                                    </iframe>
                                </div>
                            </div>


                        </div>

                    </div>
                    
                    
                    
                    
                    


                    <!--Copy right-->
